<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.1;net45</TargetFrameworks>
    <NoWarn>1998</NoWarn>
    <Summary>An easy to use middle tier micro-framework for .NET and .NET Core</Summary>
    <Description>Peasy is a middle tier micro-framework that offers an easy to use and flexible rules engine and was designed to address common challenges such as threading, concurrency, scalability, fault tolerance, async and multiple client support</Description>
    <VersionPrefix>4.2.0</VersionPrefix>
    <Authors>Aaron Hanusa</Authors>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AssemblyName>Peasy</AssemblyName>
    <PackageId>Peasy</PackageId>
    <PackageIconUrl>https://www.dropbox.com/s/2yajr2x9yevvzbm/peasy3.png?raw=1</PackageIconUrl>
    <PackageProjectUrl>https://github.com/ahanusa/Peasy.NET</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Attributes\" />
    <Folder Include="Extensions\" />
    <Folder Include="Exception\" />
    <Folder Include="Rules\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.4.1" />
  </ItemGroup>

</Project>